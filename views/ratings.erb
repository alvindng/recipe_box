<h1>Recipes</h1>

  <% if @recipes.any? %>
  <div class="well">
  <ul>
    <% @recipes.each do |recipe| %>
    <li> <a href="/recipe/ <%= recipe.id %>"> <%= recipe.name %></a> <%= recipe.rating %> <span class="glyphicon glyphicon-star"></span></li>
    <% end %>
  </ul>
  <% else %>
  <h3>There are no recipes!</h3>
  <% end %>
</div>

<h3><a href="/">Home</a></h3>
<h3><a href="/recipes">Recipes</a></h3>
